{
  "name": "quickloan",
  "version": "1.0.0",
  "description": "SJDC - Full-stack loan management system with React Native Expo + PERN stack",
  "main": "node_modules/expo/AppEntry.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm start",
    "frontend:dev": "cd frontend && npm run web",
    "frontend:android": "cd frontend && npm run android",
    "frontend:ios": "cd frontend && npm run ios",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup": "npm run install:all",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist"
  },
  "keywords": [
    "loan",
    "fintech",
    "expo",
    "react-native",
    "express",
    "supabase"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "~19.1.10",
    "concurrently": "^8.2.2",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.15.6",
    "bcrypt": "^6.0.0",
    "expo": "^54.0.25",
    "expo-router": "^6.0.14",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-native": "0.82.1"
  }
}
